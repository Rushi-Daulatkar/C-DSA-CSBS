#include <stdio.h>

int main()
{
    int ch;
    float ar,cum,l,b,h,r;
    int pi = 3.14;
    
        printf("\n 1.Calculate area of Circle\n");
        printf("\n 2.Calculate Circumference of Circle\n");
        printf("\n 3.Calculate Perimeter of Rectangle\n");
       
        
        printf("\nEnter your choice\n");
        scanf("%d",&ch);
        
        
        switch(ch)
        {
            case 1 : printf("\n Enter the value of Radius of Circle\n :");
            scanf("%f",&r);
            ar = pi * r * r;
            printf("Area of Circle is %f sqm",ar);
            break;
            
            case 2 :printf("\n Enter the value of Radius of Circle\n :");
            scanf("%f",&r);
            
            cum = 2 * pi * r;
            printf("The Circumference of circle is %f sqm",cum);
            break;
            
            case 3 : printf("\n Enter the value of Height and Base of  rectangle\n :");
            scanf("%f%f",&h,&b);
            
            ar = (h * b) / 2;
            printf("The Area of Triangle is %f sqm",ar);
            break;
            
            
        }
}  
  
